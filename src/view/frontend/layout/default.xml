<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="invite_friend_link">
                <arguments>
                    <argument name="label" xsi:type="string">Agregar Referido</argument>
                    <argument name="path" xsi:type="string">referral/customer_referral/create</argument>
                    <argument name="attributes" xsi:type="array">
                        <item name="class" xsi:type="string">referral-button</item>
                        <item name="rel" xsi:type="string">nofollow</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceBlock name="header.links">
            <block class="WolfSellers\Referral\Block\Link"
                   name="referral-link-header"
            >
                <arguments>
                    <argument name="label" xsi:type="string">Agregar Referido</argument>
                    <argument name="path" xsi:type="string">referral/customer_referral/create</argument>
                    <argument name="attributes" xsi:type="array">
                        <item name="class" xsi:type="string">referral-button</item>
                        <item name="rel" xsi:type="string">nofollow</item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
